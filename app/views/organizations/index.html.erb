<div style='display: inline-block;vertical-align: top'>
	<h2> Here are the organizations you may join</h2>
	<% @all_orgs.each do |org|%>
		<a href="/groups/<%=org.id%>"><%= org.name %></a></br>
		<p><b>Members:</b> <%=org.users.length%><p> 
		<p><%=org.description%></p>
	<%end%>
</div>
<div style='display: inline-block;vertical-align: top'>
	<h2>|| Create a new organization</h2> 
	<form action='users/<%=current_user.id%>/groups' method='post'>
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<label for="name"> Org Name:</label>
		<input type='text' name='name'><br>
		<label for="description"> Description:</label>
		<input type='textarea' name='description' style='height: 120px'><br>
		<input type='submit' value='create'>
	</form>
	<% if flash[:errors]%>
		<% flash[:errors].each do |errors|%>
			<p style="color:red"><%=errors%></p>
		<%end%>
	<% end %>
</div>